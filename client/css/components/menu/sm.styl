.menu {
	/*border: 1px solid black;*/
	color: #fff;
	width: 100%;
	margin: 0 auto;
	// margin-bottom: -1rem;
	margin-bottom: .5rem;
}

.menu__btn__list {
	background-color: #7f53cc;
	padding: .5em;
	/*border: 1px solid black;*/
	margin: 0 auto;
	width: auto;
	flex-direction: column;
	
}

.menu__btn {
	list-style: none;
	margin: 0 auto;
	margin-bottom: .5em;
	cursor: pointer;
	font-family: 'Arimo', sans-serif;
	font-size: 1rem;
}

a {
	color: #fff;
	text-decoration: none;
}

.menu__btn_icon {
	font-size: 1.4rem;
}

.menu__btn_icon--responsive {
	font-size: 1.7em;
}

a:hover {
	color: #0e0d0c;
}